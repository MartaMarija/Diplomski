<header class="navbar">
    <div class="navbar-logo">
        {% if hikingAssociation is not empty %}
            <a href="{{ path('hiking_association_info', { 'hikingAssociation': hikingAssociation.id }) }}" data-navigo class="hiking-association-exists">
                {{ hikingAssociation.name|upper }}
            </a>
        {% endif %}
        <a href="{{ path('default') }}" class="hiking-association-does-not-exist" data-navigo>PRETRAŽIVANJE DRUŠTAVA</a>
    </div>

    <nav class="navbar-menu-hiking-association navbar-menu hiking-association-exists">
        {% if hikingAssociation is not empty %}
            {% include "segments/hiking-association-nav.html.twig" with {'hikingAssociation': hikingAssociation} %}
        {% endif %}
    </nav>

    <div class="navbar-auth">
        {% if app.user %}
            <a href="{{ path('my_profile') }}" data-navigo>PROFIL</a>
            <a href="{{ path('logout') }}">ODJAVA</a>
        {% else %}
            <a href="{{ path('login') }}" data-navigo>PRIJAVA</a>
            <a href="{{ path('registration') }}" data-navigo>REGISTRACIJA</a>
        {% endif %}

        {% if hikingAssociation is not empty %}
            <a href="{{ path('default') }}" class="hiking-association-exists" data-navigo>PRETRAŽIVANJE DRUŠTAVA</a>
        {% endif %}
    </div>
</header>